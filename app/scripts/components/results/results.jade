ion-header-bar.bar-positive(align-title="center")
  a.title Lubert POC
  button.button.button-icon.icon(ng-click="showFilter()") Filter
  

ion-content
  div(ng-show="state === 'list'")
    ion-list
      ion-item(ng-repeat="artist in artists") 
        b {{ $index + 1}}&nbsp;
        span {{ artist.uuid }}
  div(ng-show="state === 'map'") Mapa
    
  
.tabs.tabs-icon-top
  a.tab-item(ng-click="setState('list')")
    i.icon.ion-ios-list
    | List
  
  a.tab-item(ng-click="setState('map')")
    i.icon.ion-ios-location
    | Map
